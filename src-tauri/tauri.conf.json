{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build:genshin",
    "beforeDevCommand": "",
    "devPath": "http://localhost:3000",
    "distDir": "../build/genshinMusic/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Genshin Music Nightly",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": [
          "$APP/*"
        ],
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeFile": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "assets/Genshin/icons/32x32.png",
        "assets/Genshin/icons/128x128.png",
        "assets/Genshin/icons/128x128@2x.png",
        "assets/Genshin/icons/icon.icns",
        "assets/Genshin/icons/icon.ico"
      ],
      "identifier": "dev.specy.genshin-music",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "pubkey": "",
      "endpoints": [
        "https://github.com/Specy/genshin-music/blob/main/src-tauri/tauri.update.json"
      ],
      "dialog": true
    },
    "windows": [
      {
        "fullscreen": false,
        "theme": "Dark",
        "height": 720,
        "minWidth": 600,
        "center": true,
        "minHeight": 400,
        "resizable": true,
        "title": "Genshin Music Nightly",
        "width": 1280
      }
    ]
  }
}